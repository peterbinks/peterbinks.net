---
// Last.fm recently played component
const LASTFM_API_KEY = '30fe34bb89c4ceeac9450ac69fa890d4';
const LASTFM_USER = 'peterbinks';

interface Track {
  name: string;
  artist: string;
  album: string;
  url: string;
  image: string;
  nowPlaying: boolean;
}

let track: Track | null = null;
let error: string | null = null;

try {
  const response = await fetch(
    `https://ws.audioscrobbler.com/2.0/?method=user.getrecenttracks&user=${LASTFM_USER}&api_key=${LASTFM_API_KEY}&format=json&limit=1`
  );
  
  if (response.ok) {
    const data = await response.json();
    const recentTrack = data.recenttracks?.track?.[0];
    
    if (recentTrack) {
      track = {
        name: recentTrack.name,
        artist: recentTrack.artist['#text'],
        album: recentTrack.album['#text'],
        url: recentTrack.url,
        image: recentTrack.image?.[1]?.['#text'] || '', // medium size
        nowPlaying: recentTrack['@attr']?.nowplaying === 'true'
      };
    }
  }
} catch (e) {
  error = 'Could not load track';
}
---

{track && (
  <div class="last-played">
    <div class="sidebar-title">
      {track.nowPlaying ? 'NOW PLAYING' : 'LAST PLAYED'}
    </div>
    <a href={track.url} target="_blank" rel="noopener noreferrer" class="track-link">
      {track.image && (
        <img src={track.image} alt={track.album} class="track-image" />
      )}
      <div class="track-info">
        <div class="track-name">{track.name}</div>
        <div class="track-artist">{track.artist}</div>
      </div>
    </a>
  </div>
)}

<style>
  .last-played {
    margin-bottom: var(--space-5);
  }

  .track-link {
    display: flex;
    gap: var(--space-3);
    align-items: center;
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .track-link:hover {
    color: var(--accent);
  }

  .track-link:hover .track-image {
    border-color: var(--accent);
  }

  .track-image {
    width: 48px;
    height: 48px;
    border: 1px solid var(--border-default);
    flex-shrink: 0;
  }

  .track-info {
    min-width: 0;
  }

  .track-name {
    color: var(--text-primary);
    font-size: var(--font-size-sm);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .track-artist {
    color: var(--text-muted);
    font-size: var(--font-size-xs);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
</style>
