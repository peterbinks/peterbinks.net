---
// Terminal-style site header with ASCII logo and navigation
import AsciiLogo from "./AsciiLogo.astro";
import Nav from "./Nav.astro";
import ThemeToggle from "./ThemeToggle.astro";
import ColorPicker from "./ColorPicker.astro";

interface Props {
  currentPath?: string;
}

const { currentPath = "" } = Astro.props;

// Format current date
const now = new Date();
const dateStr = now.toISOString().split("T")[0].replace(/-/g, ".");
---

<header class="site-header">
  <div class="header-inner">
    <Nav currentPath={currentPath} />
    <div class="header-controls">
      <ThemeToggle />
      <ColorPicker />
    </div>
  </div>
</header>

<style>
  .site-header {
    max-width: var(--max-content-width);
    margin: 0 auto;
    width: 100%;
  }

  .header-inner {
    display: flex;
    flex-direction: row;
    gap: var(--space-4);
  }

  .header-controls {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-left: auto;
  }
  }
</style>
