---
const socialLinks = [
  { href: 'https://twitter.com/peterbinks', label: 'Twitter', id: 'twitterIcon' },
  { href: 'https://codepen.io/peterbinks', label: 'Codepen', id: 'codepenIcon' },
  { href: 'https://instagram.com/peterbinks', label: 'Instagram', id: 'instagramIcon' },
  { href: 'https://github.com/peterbinks', label: 'Github', id: 'githubIcon' },
  { href: 'https://linkedin.com/in/peterbinkowski', label: 'LinkedIn', id: 'linkedinIcon' },
  { href: 'mailto:peter@peterbinks.net', label: 'Email', id: 'emailIcon' },
];

const currentYear = new Date().getFullYear();
const days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
---

<footer>
  <div class="container">
    <div class="columns six offset-by-three places">
      <h3>How To Stalk Me:</h3>
      <ul>
        {socialLinks.map((link) => (
          <li id={link.id}><a href={link.href}>{link.label}</a></li>
        ))}
      </ul>
    </div>
    <div class="copyright">
      <span>&copy; {currentYear}</span>
      <span>Have a great <span id="day"></span></span>
    </div>
  </div>
</footer>

<script>
  const days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
  const dayElement = document.getElementById('day');
  if (dayElement) {
    dayElement.textContent = days[new Date().getDay()];
  }
</script>
