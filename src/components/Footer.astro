---
// Terminal-style EOF footer
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="footer-inner">
    <span class="eof">[EOF]</span>
    <span class="footer-divider">//</span>
    <span>peterbinks.net v3.0</span>
    <span class="footer-divider">//</span>
    <span>est. 2016</span>
    <span class="footer-divider">//</span>
    <span>made with <span class="heart">&lt;3</span> in chicago</span>
    <span class="footer-divider">//</span>
    <span>&copy; {currentYear}</span>
  </div>
</footer>

<style>
  .site-footer {
    max-width: var(--max-content-width);
    margin: 0 auto;
    width: 100%;
  }

  .footer-inner {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    align-items: center;
  }

  .eof {
    color: var(--accent);
  }

  .footer-divider {
    color: var(--border-default);
  }

  .heart {
    color: var(--accent);
  }

  @media (max-width: 600px) {
    .footer-inner {
      justify-content: center;
      text-align: center;
    }
  }
</style>
