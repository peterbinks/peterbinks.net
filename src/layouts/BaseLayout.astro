---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.astro';
import Scanlines from '../components/Scanlines.astro';
import '../styles/main.css';

interface Props {
  title?: string;
  description?: string;
  showSidebar?: boolean;
}

const { 
  title = 'PETERBINKS.NET', 
  description = 'Design Engineer // Chicago, IL',
  showSidebar = true
} = Astro.props;

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content={description} />
  <meta name="robots" content="index, follow" />
  <meta name="theme-color" content="#1a1410" />
  <title>{title} // PETERBINKS.NET</title>
  
  <!-- Prevent flash of wrong theme/accent -->
  <script is:inline>
    (function() {
      const savedTheme = localStorage.getItem('theme');
      const savedAccent = localStorage.getItem('accent');
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      
      // Light is default; only go dark if explicitly saved or system prefers dark
      if (savedTheme === 'dark' || (!savedTheme && prefersDark)) {
        document.documentElement.setAttribute('data-theme', 'dark');
      } else {
        document.documentElement.setAttribute('data-theme', 'light');
      }
      
      if (savedAccent) {
        document.documentElement.setAttribute('data-accent', savedAccent);
      }
    })();
  </script>
</head>
<body>
  <Scanlines />
  
  <div class="site-wrapper">
    <Header currentPath={currentPath} />
    
    <main class="site-main">
      <div class="content-area">
        <slot />
      </div>
      
      {showSidebar && <Sidebar />}
    </main>
    
    <Footer />
  </div>
</body>
</html>
