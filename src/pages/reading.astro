---
import BaseLayout from '../layouts/BaseLayout.astro';

const books = [
  {
    title: "Red Mars",
    author: "Kim Stanley Robinson",
    status: "READING",
    description: "Red Mars is a story of early attempts to terraform and colonize Mars. Robinson does a great job of being as scientifically accurate as possible, while detailing a plausible way for Mars to one day be colonized."
  },
];
---

<BaseLayout title="LIBRARY.DAT">
  <header class="page-header">
    <h1 class="terminal-prompt">LIBRARY.DAT</h1>
    <p class="page-description">Books currently loaded into memory.</p>
  </header>

  <hr class="section-divider double-line" />

  <section class="books-list">
    {books.map((book) => (
      <div class="book-entry terminal-box" data-title={book.status}>
        <h2 class="book-title">{book.title}</h2>
        <div class="book-author">by {book.author}</div>
        <p class="book-description">{book.description}</p>
      </div>
    ))}
  </section>
</BaseLayout>

<style>
  .page-header {
    margin-bottom: var(--space-5);
  }

  .page-header h1 {
    margin-bottom: var(--space-2);
  }

  .page-description {
    color: var(--text-muted);
    font-size: var(--font-size-sm);
  }

  .books-list {
    margin-top: var(--space-5);
  }

  .book-entry {
    margin-bottom: var(--space-5);
  }

  .book-title {
    color: var(--text-primary);
    font-size: var(--font-size-xl);
    margin-bottom: var(--space-2);
    text-transform: none;
    letter-spacing: normal;
  }

  .book-author {
    color: var(--text-muted);
    font-size: var(--font-size-sm);
    margin-bottom: var(--space-4);
  }

  .book-description {
    color: var(--text-secondary);
    line-height: 1.7;
  }
</style>
